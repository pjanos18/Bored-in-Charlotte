<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="158dp"
                app:srcCompat="@drawable/bankofamericastadium"
                android:id="@+id/imageView7" />

            <TextView
                android:text="Carolina Panthers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView10"
                android:textAppearance="@android:style/TextAppearance.Holo.Large" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="167dp"
                app:srcCompat="@drawable/hornets"
                android:id="@+id/imageView8"
                android:layout_weight="0.20" />

            <TextView
                android:text="Charlotte Hornets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView11"
                android:textAppearance="@android:style/TextAppearance.Holo.Large" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/knights"
                android:id="@+id/imageView13"
                android:adjustViewBounds="true"
                android:cropToPadding="true" />

            <TextView
                android:text="Charlotte Knights"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Holo.Large" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/independence"
                android:id="@+id/imageView14" />

            <TextView
                android:text="Charlotte Independence"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView17"
                android:textAppearance="@android:style/TextAppearance.Holo.Large" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/checkers"
                android:id="@+id/imageView15"
                android:adjustViewBounds="true" />

            <TextView
                android:text="Charlotte Checkers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView18"
                android:textAppearance="@android:style/TextAppearance.Holo.Large" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/hounds"
                android:id="@+id/imageView16"
                android:adjustViewBounds="true" />

            <TextView
                android:text="Charlotte Hounds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView19"
                android:textAppearance="@android:style/TextAppearance.Holo.Large" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>