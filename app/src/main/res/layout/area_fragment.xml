<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageButton
                android:layout_width="426dp"
                android:layout_height="234dp"
                app:srcCompat="@drawable/davidson"
                android:id="@+id/imageButton"
                android:scaleType="centerCrop" />

            <TextView
                android:text="Davidson, NC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView22"
                android:textAppearance="@android:style/TextAppearance.Holo.Large" />

            <TextView
                android:text='A cute little college town that is home to Davidson College. Every year they host "Christmas in Davidson".'
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView27" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="196dp"
                app:srcCompat="@drawable/winstonsalemskyline"
                android:id="@+id/imageView17"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:cropToPadding="true" />

            <TextView
                android:text="Winston Salem, NC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView23"
                android:textAppearance="@android:style/TextAppearance.Holo.Large" />

            <TextView
                android:text="An hour drive from Charlotte, Winston Salem is a small one of a kind city."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView51" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/lexington"
                android:id="@+id/imageView11"
                android:adjustViewBounds="true"
                android:cropToPadding="true" />

            <TextView
                android:text="Lexington, NC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView49"
                android:textAppearance="@android:style/TextAppearance.Holo.Large"/>

            <TextView
                android:text="Lexington is known for their unique BBQ that combines both Eastern and Western NC BBQ into one delicious dish. Holds the Lexington BBQ Festival every year."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView50" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>